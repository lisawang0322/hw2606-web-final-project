<form method="POST" action="/user/add-product" enctype="multipart/form-data" class="ui form">
    <div class="field">
        <label for="name">Product Name:</label>
        <input type="text" id="name" name="name" required>
    </div>
    <div class="field">
        <label for="description">Description:</label>
        <textarea id="description" name="description" required></textarea>
    </div>
    <div class="field">
        <label for="price">Price:</label>
        <input type="number" id="price" name="price" required min="0" step="0.01">
    </div>
    <div class="field">
        <label for="category">Category:</label>
        <select id="category" name="category" required class="ui fluid dropdown">
            <option value="">Select a Category</option>
            <option value="breads">Breads</option>
            <option value="cakes">Cakes</option>
            <option value="scones">Scones</option>
            <option value="pastries">Pastries</option>
            <option value="cookies">Cookies</option>
        </select>
    </div>
    <div class="field">
        <label for="ingredients">Ingredients:</label>
        <input type="text" id="ingredients" name="ingredients" placeholder="Separate ingredients with commas">
    </div>
    <div class="field">
        <label for="inStock">In Stock:</label>
        <input type="checkbox" id="inStock" name="inStock" tabindex="0" class="hidden">
    </div>
    <div class="field">
        <label for="images">Product Images:</label>
        <input type="file" id="images" name="images" accept="image/*" multiple>
    </div>
    <button class="ui button" type="submit">Add Product</button>
</form>