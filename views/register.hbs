<h1 class="ui header">Create Account</h1>

{{#if error}}
<p class="ui error message">{{error}}</p>
{{/if}}

<form action="/user/register" method="POST" class="ui form">
    <div class="field">
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" required pattern="[a-zA-Z0-9]+" title="Username should be alphanumeric.">
    </div>

    <div class="field">
        <label for="fullName">Full Name:</label>
        <input type="text" id="fullName" name="fullName" required>
    </div>

    <div class="field">
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required minlength="8" title="Password must be at least 8 characters long.">
    </div>

    <div class="field">
        <label for="confirmPassword">Re-enter Password:</label>
        <input type="password" id="confirmPassword" name="confirmPassword" required>
    </div>

    <div class="field">
        <label for="street">Street Address:</label>
        <input type="text" id="street" name="street" required>
    </div>

    <div class="field">
        <label for="city">City:</label>
        <input type="text" id="city" name="city" required>
    </div>

    <div class="field">
        <label for="state">State:</label>
        <input type="text" id="state" name="state" required>
    </div>

    <div class="field">
        <label for="zipCode">Zip Code:</label>
        <input type="text" id="zipCode" name="zipCode" required pattern="\d*" minlength="5" maxlength="9" title="Enter a valid ZIP code.">
    </div>

    <div class="field">
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>
    </div>

    <div class="field">
        <label for="phone">Phone Number:</label>
        <input type="tel" id="phone" name="phone" required pattern="[0-9]{10}" title="Phone number should be 10 digits.">
    </div>

    <div class="field">
        <label for="sweetness">Sweetness Preference:</label>
        <input type="text" id="sweetness" name="sweetness">
    </div>

    <div class="field">
        <label for="flavors">Favorite Flavors:</label>
        <input type="text" id="flavors" name="flavors">
    </div>

    <div class="field">
        <label for="types">Types:</label>
        <select multiple="" id="types" name="types" class="ui fluid dropdown">
            <option value="cake">Cake</option>
            <option value="cookie">Cookie</option>
        </select>
    </div>

    <div class="field">
        <label for="allergies">Allergies:</label>
        <select multiple="" id="allergies" name="allergies" class="ui fluid dropdown">
            <option value="nuts">Nuts</option>
            <option value="gluten">Gluten</option>
            <option value="dairy">Dairy</option>
        </select>
    </div>

    <button type="submit" class="ui button">Create</button>
</form>

<script src="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.js"></
